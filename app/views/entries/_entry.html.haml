.entry{id: "#{entry.id}"}
  .entry-image
    = entry.img ? image_tag(entry.img) : image_tag("no_image.jpg")
  .entry-content
    %h1= entry.name
    %p.entry-description
      %span.price= entry.price
      = "  #{entry.city}  #{entry.source}  #{time_ago_in_words entry.happend_at}前"
      = link_to '原帖链接', entry.product
