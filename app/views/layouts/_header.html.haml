%header.centered-navigation
  .centered-navigation-wrapper
    %a.mobile-logo
      = image_tag("estao.png")
    %ul.centered-navigation-menu
      %li.nav-link.logo
        = link_to root_path, class: "logo" do
          = image_tag("estao.png")
      %li.nav-link
        %a.modal-show{data: {for: "modal-about"}, href: "javascript:void(0)"} 关于二手淘
      %li.nav-link
        %a.modal-show{data: {for: "modal-us"}, href: "javascript:void(0)"} 关于我们
      %li.nav-link
        %a.modal-show.special{data: {for: "modal-special"}, href: "javascript:void(0)"} 特别提示
      %li.nav-link
        %a.modal-show{data: {for: "modal-keyboard"}, href: "javascript:void(0)"} 快捷键
      %li.nav-link
        = link_to "留言", disqus_path
      %li.nav-link
        %a{href: "javascript:void(0)"} 开发日志
  .centered-navigation-search
    = search_form_for Entry.search, url: root_path, html: {id: 'search'} do |f|
      = f.search_field :name_cont, placeholder: "二手淘, 不仅仅多一倍乐趣!", id: "entry_name"
      = f.hidden_field :category_eq, value: params[:category] if params[:category].present?
      = f.submit "淘淘看"
    .clear
    #notice
      = display_notice_and_alert 
